<launch>

    <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find sysu_competition)/worlds/case1.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
    </include>

    <arg name="uav_id" default="1" />
    <arg name="flag_printf" default="true" />
    <node name="gazebo_model_node" pkg="sysu_competition" type="gazebo_model_node" output="screen">
        <!-- 无人机ID -->
		<param name="uav_id" value="$(arg uav_id)" />
        <!-- 是否打印 -->
		<param name="flag_printf" value="$(arg flag_printf)" />
	</node>


    <arg name="enable_rviz" default="false"/>
    <arg name="rivz_config" default="$(find sysu_competition)/launch/sunray_sim.rviz"/>
    <!-- 启动Rviz-->
    <group if="$(arg enable_rviz)">
        <node type="rviz" name="rviz_sim" pkg="rviz" args="-d $(arg rivz_config)"/>
    </group>




</launch>

